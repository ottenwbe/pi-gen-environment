{
  "system": {
    "name" : "custompi",
    "type" : "lite"
  },
  "ssh" : {
    "enabled" : true
  },
  "locale": {
    "gen" : ["en_GB.UTF-8 UTF-8", "de_DE.UTF-8 UTF-8"],
    "sys" : "en_GB.UTF-8"
  },
  "cgroups": {
    "memory": true
  },
  "wifi": {
    "networks": [
      {
        "ssid": "your_ssid",
        "wpa_passphrase": "your_wpa_passphrase" // Alternative: "passphrase": "your_passpharse"
      }
    ],
    "wpa_country": "DE"
  }
}